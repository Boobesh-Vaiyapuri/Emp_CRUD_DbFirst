@model IEnumerable<Emp_CRUD_DbFirst.Models.Emp_Details>

@{
    ViewBag.Title = "Employee Details";
}

<h2>Employee Details</h2>
<br />
@if (@TempData["AlertMsg"] != null)
{
    <div class="alert alert-primary">
        <b>@TempData["AlertMsg"]</b>
    </div>
}
<hr />

<p>
    @Html.ActionLink("Create New Employee", "Create", null, new { @class = "btn btn-primary" })
</p>


<table class="table table-hover table-responsive table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Emp_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Emp_Email_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Emp_Contact_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Emp_Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Emp_City)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Email_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Contact_No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_City)
            </td>
            <td>
                @Html.ActionLink("Update", "Edit", new { id = item.Emp_ID }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Emp_ID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
